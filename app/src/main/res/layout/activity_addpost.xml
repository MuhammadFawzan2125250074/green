<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity"
    android:background="@drawable/bg3"
    >
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_namapohon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="160">
            <EditText
                android:id="@+id/et_namapohon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Pohon"
                android:inputType="none"
                android:maxLength="160"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_below="@id/til_namapohon"
            app:counterMaxLength="160">
            <EditText
                android:id="@+id/et_tempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Tempat"
                android:inputType="none"
                android:maxLength="160"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Post"
            android:layout_below="@id/til_tempat"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#EDF1D6"
            android:textColor="@color/black"
            />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            />
    </RelativeLayout>



</RelativeLayout>